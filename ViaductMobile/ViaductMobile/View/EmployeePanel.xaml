<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d"
             x:Class="ViaductMobile.EmployeePanel"
             xmlns:dg="clr-namespace:Xamarin.Forms.DataGrid;assembly=Xamarin.Forms.DataGrid">
        <ContentPage.ToolbarItems>
            <ToolbarItem Text="Wróć" Clicked="BackClicked" IconImageSource="back.png"></ToolbarItem>
        </ContentPage.ToolbarItems>
        <Grid BackgroundColor="#272727">
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="8*" />
                <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollView VerticalOptions="FillAndExpand"  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" >
                <Grid Padding="10">
                    <dg:DataGrid x:Name="employeesDataGrid" ItemsSource="{Binding Users}" SelectedItem="{Binding SelectedUser}" PullToRefreshCommand="{Binding RefreshCommand}" IsRefreshing="{Binding IsRefreshing}" RowHeight="70" HeaderHeight="50" SelectionEnabled="True" HeaderTextColor="Black">
                    <x:Arguments>
                        <ListViewCachingStrategy>RetainElement</ListViewCachingStrategy>
                    </x:Arguments>
                    <dg:DataGrid.Columns>
                            <dg:DataGridColumn Title="Pseudonim" PropertyName="Nickname" Width="2*"/>
                            <dg:DataGridColumn Title="Uprawnienia" PropertyName="Permission" Width="2*"/>
                            <dg:DataGridColumn Title="Bar" PropertyName="BarRate" Width="*"/>
                            <dg:DataGridColumn Title="Kuchnia" PropertyName="KitchenRate" Width="*"/>
                            <dg:DataGridColumn Title="Dostawy" PropertyName="DeliverRate" Width="*"/>
                        </dg:DataGrid.Columns>
                        <dg:DataGrid.RowsBackgroundColorPalette>
                            <dg:PaletteCollection>
                                <Color>#F2F2F2</Color>
                                <Color>#FFFFFF</Color>
                            </dg:PaletteCollection>
                        </dg:DataGrid.RowsBackgroundColorPalette>
                    </dg:DataGrid>
                </Grid>
            </ScrollView>
        <Button Style="{StaticResource typicalButton}" x:Name="addButton" Clicked="AddClicked" Grid.Row="1" Grid.Column="0" Text="Dodaj" Margin="10, 10, 10, 10"/>
        <Button Style="{StaticResource typicalButton}" x:Name="editButton" Clicked="EditClicked" Grid.Row="1" Grid.Column="1" Text="Edytuj" Margin="10, 10, 10, 10"/>
        <Button Style="{StaticResource typicalButton}" x:Name="deleteButton" Clicked="DeleteClicked" Grid.Row="1" Grid.Column="2" Text="Usuń" Margin="10, 10, 10, 10"/>
    </Grid>
</ContentPage>
